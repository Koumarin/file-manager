script/source = "extends HBoxContainer

signal back_selected
signal forward_selected

onready var title_label := $LeftContainer/Title

func _on_ButtonBack_button_up() -> void:
	emit_signal('back_selected')

func _on_ButtonForward_button_up() -> void:
	emit_signal('forward_selected')

func _on_directory_changed(directory: Directory) -> void:
	var curdir := directory.get_current_dir()
	
	title_label.text = curdir
"

